<UserControl x:Class="diary2.foodControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:diary2"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="check" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="img" Grid.Column="1"/>
        <TextBlock x:Name="nameBlck" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="2"/>
    </Grid>
</UserControl>
